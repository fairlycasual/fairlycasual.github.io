{
"manifest_version": 1.2,
"name": "Sensible Weather",
"version": "1.2",
"description": "This extension will return simple weather obs for a site based on IP geolocation",

 "icons": { "16": "day16.png",
            "48": "day48.png",
            "128": "day128.png"
          },

"browser_action": {
  "default_icon": "day16.png",
  "default_title": "Sensible Weather",
  "default_popup": "popup.html" 
 },

"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self' https://ipinfo.io",

"permissions": [
  "activeTab"
 ]
}
